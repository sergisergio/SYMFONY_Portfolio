{% extends 'layout.html.twig' %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block body %}

    <div class="box" style="margin-top: 200px;">
        <h1>Mon profil</h1>
        <a href="{{ path('edit_account', {id: user.id}) }}" class="btn btn-lg btn-green pull-right" style="margin-top: -30px;">Modifier</a>
    </div>

    <div class="box" style="margin-top: 50px;">
        <div class="row">
            <div class="col-md-3">
                {% if user.avatar %}
                    <img src="{{ user.avatar }}" alt="" class="img-responsive"> }}
                {% else %}
                    <img src="{{ asset('img/avatar.png') }}" alt="" class="img-responsive" style="max-width: 50%;">
                {% endif %}
            </div>
            <div class="col-md-9">
                <h2>{{ user.username }}</h2>
            </div>
        </div>
    </div>

    <div class="box" style="margin-top: 50px;">
        <h3>A propos de moi</h3>
        {{ user.username }}
        <br>
        Date de naissance:
    </div>

    <div class="box" style="margin-top: 50px;">
        <h3>Biographie</h3>
        {{ user.bio | raw }}
    </div>

    <div class="box" style="margin-top: 50px;">
        <h3>Informations</h3>
        Date d'inscription: {{ user.createdAt | date('d-m-Y') }}
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}