{% extends 'Admin/base.html.twig' %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block body %}
    <div class="container inner">
        <section>
            <div class="box">
                <h1 class="text-center">Utilisateurs</h1>
                <div class="count">
                    <h3>{{ pagination.getTotalItemCount }} utilisateurs</h3>
                </div>
                <table class="table table-dark table-hover">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Rôle</th>
                        <th>Date</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for user in pagination %}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.roles[0] == 'ROLE_USER' ? 'utilisateur' : 'administrateur' }}</td>
                        <td>{{ user.createdAt | date('d-m-Y') }}</td>
                        <td>{{ user.active ? 'Activé' : 'non activé' }}</td>
                        <td>
                            <a href="#"><i class="fa fa-archive" aria-hidden="true"></i></a>
                            <a href="#"><i class="fa fa-edit" aria-hidden="true"></i></a>
                            <a href="#"
                               onclick="return confirm('Confirmation?');">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                    </tbody>
                    {% endfor %}
                </table>

            </div>
        </section>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}