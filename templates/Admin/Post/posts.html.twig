{% extends 'Admin/base.html.twig' %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block body %}
    <div class="container inner">
        <section>
            <div class="box">
                <h1>Articles</h1>
                <div class="count">
                    <h3>{{ pagination.getTotalItemCount }} articles</h3>
                </div>
                <a href="{{ path('post_add') }}" class="btn btn-green pull-right">Ajouter un article</a>
                <table class="table table-dark table-hover">
                    <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Date</th>
                        <th>Publi√©</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for post in pagination %}
                    <tr>
                        <td>{{ post.title }}</td>
                        <td>{{ post.createdAt | date('d-m-Y') }}</td>
                        <td>{{ post.published ? 'OUI' : 'NON' }}</td>
                        <td>
                            <a href="#" data-toggle="tooltip" title="Archiver" data-placement="left"><i class="fa fa-archive" aria-hidden="true"></i></a>
                            <a href="{{ path('post_edit', { id: post.id }) }}" data-toggle="tooltip" title="Modifier"><i class="fa fa-edit" aria-hidden="true"></i></a>
                            <a href="{{ path('post_delete', { id: post.id}) }}"
                               onclick="return confirm('Confirmation?');" data-toggle="tooltip" title="Supprimer">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                    </tbody>
                    {% endfor %}
                </table>
                <div class="pagination box">
                    <div class="navigation">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>
            </div>
        </section>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}