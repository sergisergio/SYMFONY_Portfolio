{% extends 'layout.html.twig' %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block body %}
    <div class="container inner">
        <div class="box" style="margin-top: 50px;">
            <h1 class="text-center">Inscription</h1>
            {{ form_start(form) }}
                <fieldset>
                    <div class="row">
                        <div class="col-md-offset-3 col-md-6 col-sm-12">
                            <div class="form-row text-input-row name-field">
                                {{ form_row(form.username, { 'label': 'Nom d\'utilisateur *', 'attr': {
                                    'placeholder': 'Nom d\'utilisateur' }}) }}
                            </div>
                            <div class="form-row text-input-row email-field">
                                {{ form_row(form.email, {'label': 'Adresse email *', 'attr': {'placeholder': 'email'}}) }}
                            </div>
                            <div class="form-row text-input-row subject-field">
                                {{ form_row(form.plainPassword.first, {'label': 'Mot de passe *', 'attr': {'placeholder': 'Mot de passe' }}) }}
                            </div>
                            <div class="form-row text-input-row subject-field">
                                {{ form_row(form.plainPassword.second, {'label': 'Confirmer Mot de passe *', 'attr': {'placeholder': 'Confirmer Mot de passe'}}) }}
                            </div>
                        </div>
                        <div class="col-sm-6 col-xs-6">
                            <div class="button-row pull-right">
                                <input type="submit" value="Envoyer" name="submit" class="btn btn-submit bm0" />
                            </div>
                        </div>
                        <div class="col-sm-6 col-xs-6 lp5">
                            <div class="button-row pull-left">
                                <input type="reset" value="Effacer" name="reset" class="btn btn-submit bm0" />
                            </div>
                        </div>
                    </div>
                </fieldset>
            {{ form_end(form) }}
            <div class="text-center" style="margin-top:50px;">Déjà inscrit? <a href="{{ path('login') }}">Connectez-vous</a></div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}